<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Products -->

    <!-- Override product_template_action_product action for Products menu -->
    <record id="stock.product_template_action_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="stock.product_template_search_form_view_stock"/>
        <field name="context">{"search_default_consumable": 1, 'default_type': 'product'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No product found. Let's create one!
            </p><p>
                Track your stock quantities by creating storable products.
            </p>
        </field>
    </record>

    <!-- Inherit Products (product_template_form_view) Form -->
    <record id="netping_view_product_template_form" model="ir.ui.view">
        <field name="name">netping.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="x_hs_code" string="HS-code"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>