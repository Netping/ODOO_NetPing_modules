<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Transfers -->

    <!-- Inherit Transfers (view_picking_form) From -->
    <record id="netping_view_picking_form" model="ir.ui.view">
        <field name="name">netping.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="x_GUI"/>
                <field name="x_GUI_date"/>
            </xpath>
			<xpath expr="//page[@name='detailed_operations_hidden']/field[@name='package_level_ids_details']" position="before">
                <button name="%(action_stock_picking_multiple_packages)d"
						string="Add multiple packages"
						type="action"
						class="oe_highlight oe_edit_only"
						attrs="{'readonly': [('state', '=', 'done')],
								'invisible': ['|', ('picking_type_entire_packs', '=', False), ('show_operations', '=', False)]}"
						context="{'default_picking_id': id,
								'default_location_id': location_id,
								'default_location_dest_id': location_dest_id,
								'default_show_operations': show_operations,
								'default_company_id': company_id}"
				/>				
            </xpath>
			<xpath expr="//page[@name='detailed_operations_shown']/field[@name='package_level_ids_details']" position="before">
                <button name="%(action_stock_picking_multiple_packages)d"
						string="Add multiple packages"
						type="action"
						class="oe_highlight oe_edit_only"
						attrs="{'readonly': [('state', '=', 'done')],
								'invisible': ['|', ('picking_type_entire_packs', '=', False), ('show_operations', '=', False)]}"
						context="{'default_picking_id': id,
								'default_location_id': location_id,
								'default_location_dest_id': location_dest_id,
								'default_show_operations': show_operations,
								'default_company_id': company_id}"
				/>				
            </xpath>
			<xpath expr="//field[@name='package_level_ids']" position="before">
                <button name="%(action_stock_picking_multiple_packages)d"
						string="Add multiple packages"
						type="action"
						class="oe_highlight oe_edit_only"
						attrs="{'readonly': [('state', '=', 'done')],
								'invisible': ['|', ('picking_type_entire_packs', '=', False), ('show_operations', '=', True)]}"
						context="{'default_picking_id': id,
								'default_location_id': location_id,
								'default_location_dest_id': location_dest_id,
								'default_show_operations': show_operations,
								'default_company_id': company_id}"
				/>				
            </xpath>
        </field>
    </record>

  </data>
</odoo>