<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Vendor Bills -->

    <!-- create custom view for Vendor Bills menu -->
    <record id="netping_bills_view_invoice_tree" model="ir.ui.view">
        <field name="name">netping.bills.account.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree string="Invoices"
                  js_class="account_tree"
                  sample="1">
                <header>
                    <button name="action_register_payment" type="object" string="Register Payment"
                        groups="account.group_account_user"
                        invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund', 'out_receipt', 'in_invoice', 'in_refund','in_receipt')"/>
                </header>
                <field name="partner_id" invisible="1"/>
                <field name="invoice_source_email" invisible="1"/>
                <field name="invoice_partner_display_name" invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund','in_receipt')" groups="base.group_user" string="Vendor" />
                <field name="invoice_date" invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund','in_receipt')" string="Bill Date"/>
                <field name="name" decoration-bf="1"/>
                <field name="invoice_origin" string="Source Document"/>
                <field name="ref" string="Vendor Reference"/>
                <field name="invoice_date_due" widget="remaining_days" optional="show" attrs="{'invisible': [['payment_state', 'in', ('paid', 'in_payment', 'reversed')]]}"/>
                <field name="amount_total_signed" string="Total" sum="Total" decoration-bf="1"/>
                <field name="amount_residual_signed" string="To Pay" sum="Amount Due"/>
                <field name="x_doc_type" string="Type"/>
                <field name="payment_state" string="Status" widget="badge" decoration-danger="payment_state == 'not_paid'" decoration-warning="payment_state in ('partial', 'in_payment')" decoration-success="payment_state in ('paid', 'reversed')" attrs="{'invisible': [('payment_state', 'in', ('invoicing_legacy'))]}"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'" optional="hide" string="State"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="move_type" invisible="context.get('default_move_type', True)"/>
              </tree>
        </field>
    </record>

    <!-- Override view_account_invoice_filter view for Vendor Bills and Customers Invoices menu-->
    <record id="netping_view_account_invoice_filter" model="ir.ui.view">
        <field name="name">netping.account.invoice.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='cancel']" position="after">
                <filter name="notcancel" string="Not Cancelled" domain="[('state', '!=', 'cancel')]"/>
            </xpath>                     
        </field>
    </record>

    <!-- Override action_move_in_invoice_type action for Vendor Bills menu -->
    <record id="account.action_move_in_invoice_type" model="ir.actions.act_window">
        <field name="name">Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="netping_bills_view_invoice_tree"/>
        <field name="search_view_id" ref="netping_view_account_invoice_filter"/>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
        <field name="context">{'default_move_type': 'in_invoice', 'search_default_notcancel': 1}</field>
    </record>

    <record id="netping_view_move_form" model="ir.ui.view">
        <field name="name">netping.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="replace"></xpath>
            <xpath expr="//field[@name='partner_bank_id']" position="replace"></xpath>
			<label for="invoice_payment_term_id" position="replace">
                <label for="invoice_payment_term_id" string="Due Date"
                    attrs="{'invisible': [('move_type', 'not in', ('out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
            </label>
			<xpath expr="//field[@name='invoice_date_due']" position="replace">
                <field name="invoice_date_due" force_save="1"
                    placeholder="Date"
                    attrs="{'invisible': ['|', ('invoice_payment_term_id', '!=', False), ('move_type', '=', 'out_invoice')]}"/>
			</xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <label for="x_GUI"/>
                <field name="x_GUI" nolabel="1"/>
                <label for="x_GUI_date"/>
                <field name="x_GUI_date" nolabel="1"/>
                <label for="invoice_origin" string="Source Document"/>
                <field name="invoice_origin" nolabel="1"/>
            </xpath>
        </field>
    </record>

    <!-- Customers Invoices -->

    <!-- create custom view for Customers Invoices menu -->
    <record id="netping_invoices_view_invoice_tree" model="ir.ui.view">
        <field name="name">netping.invoices.account.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree string="Invoices"
                  js_class="account_tree"
                  sample="1">
                <header>
                    <button name="action_register_payment" type="object" string="Register Payment"
                        groups="account.group_account_user"
                        invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund', 'out_receipt', 'in_invoice', 'in_refund','in_receipt')"/>
                </header>
                <field name="partner_id" invisible="1"/>
                <field name="invoice_source_email" invisible="1"/>
                <field name="invoice_partner_display_name" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')" groups="base.group_user" string="Customer" />
                <field name="invoice_date" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')" string="Invoice Date"/>
                <field name="name" decoration-bf="1"/>
                <field name="ref" string="Reference/Description"/>
                <field name="invoice_date_due" widget="remaining_days" optional="show" attrs="{'invisible': [['payment_state', 'in', ('paid', 'in_payment', 'reversed')]]}"/>
                <field name="invoice_origin" string="Source Document"/>
                <field name="amount_total_signed" string="Total" sum="Total" decoration-bf="1"/>
                <field name="amount_residual_signed" string="Amount Due" sum="Amount Due"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'" string="Status"/>
                <field name="payment_state" string="Pay Status" optional="hide" widget="badge" decoration-danger="payment_state == 'not_paid'" decoration-warning="payment_state in ('partial', 'in_payment')" decoration-success="payment_state in ('paid', 'reversed')" attrs="{'invisible': [('payment_state', 'in', ('invoicing_legacy'))]}"/>
                <field name="currency_id" invisible="1"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="move_type" invisible="context.get('default_move_type', True)"/>
              </tree>
        </field>
    </record>

    <!-- Override action_move_out_invoice_type action for Customers Invoices menu -->
    <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="netping_invoices_view_invoice_tree"/>
        <field name="search_view_id" ref="netping_view_account_invoice_filter"/>
        <field name="domain">[('move_type', '=', 'out_invoice')]</field>
        <field name="context">{'default_move_type': 'out_invoice', 'search_default_notcancel': 1}</field>
    </record>
	
	<!-- Update account invoice (Customer Invoice Delivery address field) !-->
    <record model="ir.ui.view" id="netping_account_invoice_form">
        <field name="name">netping.account.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="sale.account_invoice_form"/>
		<field name="arch" type="xml">
            <data>
			    <xpath expr="//field[@name='partner_shipping_id']" position="replace">
                    <field name="partner_shipping_id"
                        groups="sale.group_delivery_invoice_address"
                        attrs="{'invisible': [('move_type', 'not in', ('out_refund', 'in_invoice', 'in_refund'))]}"/>
                </xpath>
            </data>
        </field>
    </record>
    
  </data>
</odoo>