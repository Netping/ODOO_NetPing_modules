<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_company_color_form" model="ir.ui.view">
        <field name="name">web.company.color.form</field>
        <field name="model">web.company.color</field>
        <field name="arch" type="xml">
            <form>
                <group col="2">
                    <h1><field name="company_id"/></h1>
                    <group string="Navbar" name="navbar_colors">
                        <field name="navbar_bg" widget="color"/>
                        <field name="navbar_hover_bg" widget="color"/>
                        <field name="navbar_text_color" widget="color"/>
                    </group>
                    <group string="Home Page Gradient">
                        <field name="home_bg_from" widget="color"/>
                        <field name="home_bg_to" widget="color"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="view_company_color_tree" model="ir.ui.view">
        <field name="name">web.company.color.tree</field>
        <field name="model">web.company.color</field>
        <field name="arch" type="xml">
            <tree editable='bottom'>
                <field name="company_id"/>
                <field name="navbar_bg" widget="color"/>
                <field name="navbar_hover_bg" widget="color"/>
                <field name="navbar_text_color" widget="color"/>
                <field name="home_bg_from" widget="color"/>
                <field name="home_bg_to" widget="color"/>
            </tree>
        </field>
    </record>
    <record id="web_company_color_action" model="ir.actions.act_window">
        <field name="name">Web Company Color</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">web.company.color</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new company web color style
          </p>
        </field>
    </record>
</odoo>
