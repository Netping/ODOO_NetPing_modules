<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Company Styles" name="company_styles" groups="base.group_system">
                    <group col="2">
                        <group string="Navbar" name="navbar_colors">
                            <field name="navbar_bg" widget="color"/>
                            <field name="navbar_hover_bg" widget="color"/>
                            <field name="navbar_text_color" widget="color"/>
                        </group>
                        <group string="Home Page Gradient">
                            <field name="home_bg_from" widget="color"/>
                            <field name="home_bg_to" widget="color"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
