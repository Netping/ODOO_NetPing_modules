<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="netping_web_layout" inherit_id="web.layout">
            <xpath expr="//body" position="inside">
		        <t t-set="comp_ids" t-value="request.httprequest.cookies.get('cids') if request else False"/>
                <t t-if="comp_ids">
                    <t t-set="comp_id" t-value="comp_ids[0]"/>
                    <t t-set="compcolor" t-value="request.env['web.company.color'].sudo().search([('company_id', '=', int(comp_id))], limit=1)"/>
                    <t t-if="compcolor">
                        <style>.o_main_navbar {background-color:<t t-esc="compcolor.navbar_bg"/>!important;border-bottom: 0px;}</style>
                        <style>nav.o_main_navbar > ul > li > a {color:<t t-esc="compcolor.navbar_text_color"/>;}</style>
                        <style>nav.o_main_navbar a {color:<t t-esc="compcolor.navbar_text_color"/> !important;}</style>
                        <style>nav.o_main_navbar button {color:<t t-esc="compcolor.navbar_text_color"/>;}</style>
                        <style>nav.o_main_navbar > ul > li > a:hover {background-color:<t t-esc="compcolor.navbar_hover_bg"/>;}</style>
                        <style>nav.o_main_navbar a:hover {background-color:<t t-esc="compcolor.navbar_hover_bg"/>;}</style>
                        <style>nav.o_main_navbar button:hover {background-color:<t t-esc="compcolor.navbar_hover_bg"/>;}</style>
                        <style>.o_main_navbar .show .dropdown-toggle {background-color:<t t-esc="compcolor.navbar_hover_bg"/>;}</style>
                    </t>
                </t>
            </xpath>
			
            <xpath expr="//head" position="inside">
		        <t t-set="comp_ids" t-value="request.httprequest.cookies.get('cids') if request else False"/>
                <t t-if="comp_ids">
                    <t t-set="comp_id" t-value="comp_ids[0]"/>
                    <t t-set="compcolor" t-value="request.env['web.company.color'].sudo().search([('company_id', '=', int(comp_id))], limit=1)"/>
                    <t t-if="compcolor">
                        <style>body.o_home_menu_background {background: url(/web_enterprise/static/src/img/home-menu-bg-overlay.svg), linear-gradient(to right bottom, <t t-esc="compcolor.home_bg_from"/>, <t t-esc="compcolor.home_bg_to"/>);}</style>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>