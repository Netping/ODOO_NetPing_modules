<?xml version="1.0" encoding="utf-8"?>
<odoo>
    	
    <template id="report_saleorder_document_netping" inherit_id="sale.report_saleorder_document">	
	    <xpath expr="//t[@t-set='address']" position="before">
		    <t t-set="banks">
	            <div class="row mb-3" t-foreach="doc.company_id.partner_id.bank_ids" t-as="bank">
				    <div  class="col-12">
				        <div class="mb-3" t-if="bank.bank_id.name != 'PayPal'">
				            <div>
					            <strong>Bank's name: </strong><span t-esc="bank.bank_id.name"></span>
					        </div>
					        <div t-if="bank.bank_id.street">
					            <strong>Bank's address: </strong>
						        <span t-esc="bank.bank_id.street"></span>, <span t-esc="bank.bank_id.city"></span> 
						        <span t-esc="bank.bank_id.zip"></span>, <span t-esc="bank.bank_id.country.name"></span>
					        </div>
						    <div t-if="bank.acc_number">
					            <strong>Account No.: </strong>
						        <span t-esc="bank.acc_number"></span><br/>
					        </div>
						    <div t-if="bank.bank_id.bic">
					            <strong>Swift code: </strong>
						        <span t-esc="bank.bank_id.bic"></span><br/>
					        </div>
                        </div>
					    <div class="mb-3" t-if="bank.bank_id.name == 'PayPal'">
				            <div>
					           <strong t-esc="bank.bank_id.name"></strong><strong>: </strong><span t-esc="bank.bank_id.bic"></span>
					        </div>
                        </div>
				    </div>
               </div>
			   <br/><br/>
		    </t>
		</xpath>
		
		<xpath expr="//t[@t-set='address']" position="after">
		    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id or doc.partner_shipping_id != doc.partner_invoice_id">
                <t t-set="information_block">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and Shipping Address:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing Address:</strong>
                        <div t-field="doc.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                <strong>Shipping Address:</strong>
                                <div t-field="doc.partner_shipping_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                            </t>
                </t>
            </t>
		</xpath>
		
	    <xpath expr="//div[@id='informations']" position="replace">
		    <br/>
		    <div class="row" style="display:flex;">
                <div t-if="doc.client_order_ref" class="col-auto col-3 mw-25 mb-2">
                    <strong>Your Reference:</strong>
                    <p class="m-0" t-field="doc.client_order_ref"/>
                </div>
                <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-25 mb-2">
                    <strong>Date Ordered:</strong>
                    <p class="m-0" t-field="doc.date_order"/>
                </div>
                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-25 mb-2">
                    <strong>Quotation Date:</strong>
                    <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-25 mb-2" name="expiration_date">
                    <strong>Expiration:</strong>
                    <p class="m-0" t-field="doc.validity_date"/>
                </div>
                <div t-if="doc.user_id.name" class="col-auto col-3 mw-25 mb-2">
                    <strong>Salesperson:</strong>
                    <p class="m-0" t-field="doc.user_id"/>
                </div>
			    <div t-if="doc.x_delivery_by" class="col-auto col-3 mw-25 mb-2">
                    <strong>Delivery by:</strong>
                    <p class="m-0" t-field="doc.x_delivery_by"/>
                </div>
		    </div>
		    <br/>
        </xpath>
		
		<xpath expr="//th[@name='th_subtotal']" position="replace">
		    <th name="th_subtotal" class="text-right">
                <span>Price</span>
            </th>
        </xpath>
		
		<xpath expr="//td[@name='td_quantity']" position="replace">
		    <th name="td_quantity" class="text-right">
                <span t-field="line.product_uom_qty"/>
            </th>
        </xpath>
		
		<xpath expr="//td[@name='td_amount_untaxed_label']" position="replace">
		    <td name="td_amount_untaxed_label"><strong>Total Without Taxes</strong></td>
        </xpath>
		
		<xpath expr="//th[@name='th_description']" position="after">
		    <th name="th_hscode" class="text-left">
                <span>HS-code</span>
            </th>
        </xpath>
		
		<xpath expr="//td[@name='td_name']" position="after">
		    <th name="td_hscode" class="text-left">
                <span t-field="line.x_hs_code"/>
            </th>
        </xpath>
		
		<xpath expr="//th[@name='th_subtotal']" position="after">
		    <th name="th_line_weight_str" class="text-right">
                <span>Weight</span>
            </th>
        </xpath>
		
		<xpath expr="//td[@name='td_subtotal']" position="after">
		    <th name="td_line_weight_str" class="text-right">
                <span t-field="line.x_line_weight_str"/>
            </th>
        </xpath>
		
		<xpath expr="//tr[hasclass('o_total')]" position="after">
			<tr class="border-black o_total" style="">
                <td name="td_weight_str_label">Total Weight</td>
                <td name="td_weight_str" class="text-right">
                    <span t-field="doc.x_weight_str"/>
                </td>
            </tr>
        </xpath>
		
		<xpath expr="//div[@name='total']/div" position="attributes">
            <attribute name="t-attf-class">col-4</attribute>
		</xpath>
		
		<xpath expr="//div[@name='total']/div" position="before">
            <div t-if="doc.validity_date" class="col-4">
                <span>This offer valid until </span><span t-field="doc.validity_date"></span>
            </div>
            <div t-if="not doc.validity_date" class="col-4"></div>
            <div align="center" class="col-4">
                <div t-if="(doc.state in ['sale', 'done'] and doc.company_id.id == 1)">
                    <img src="/Odoo_Netping_Sales/static/img/comp_stamp.png" class="mr-3" style="height:2.5cm;width:2.5cm;"/>
                    <img src="/Odoo_Netping_Sales/static/img/boss_stamp.png" style="height:1.3cm;width:1.3cm;"/>
                </div>
				<div t-if="(doc.state in ['sale', 'done'] and doc.company_id.id != 1)">
                    <img src="/Odoo_Netping_Sales/static/img/z_comp_stamp.png" class="mr-3" style="width:4.5cm"/>
                </div>
            </div>
        </xpath>
		
    </template>
	
</odoo>
